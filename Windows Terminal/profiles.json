// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation

{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    //默认打开的终端，即profiles中每项的“guid”值
    "defaultProfile": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",

    "profiles":
    [
        {
            // Make changes here to the powershell.exe profile
            "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
            "name": "Windows PowerShell",
            "commandline": "powershell.exe",
            "hidden": false,
            // 颜色主题：default.json中预设 + 此文件中schemes(可自定义)
            "colorScheme": "ChallengerDeep",
            // 亚克力背景（毛玻璃）
            "useAcrylic": true,
            // 亚克力（毛玻璃）设置为true后窗口的透明度
            "acrylicOpacity": 0.5,
            // 背景颜色
            // "background": "#0026ff",
            // 设置背景图片地址、对齐方式、填充方式,透明度和拉伸
            // "backgroundImage": "E:/Background/h101.jpg",
            // "backgroundImageAlignment": "bottom",
            // "backgroundImageStretchMode": "fill",
            // "backgroundImageOpacity": 0.3,
            // "backgroundImageStretchMode": "fill",
            // 光标(cursor)颜色
            "cursorColor": "#FFFFFF",
            "closeOnExit": false,
            // 字体（必要时需自行安装）
            "fontFace": "Delugia Nerd Font"
        },
        {
            // Make changes here to the cmd.exe profile
            "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
            "name": "cmd",
            "commandline": "cmd.exe",
            "colorScheme": "Vintage",
            "hidden": false,
            "useAcrylic": true,
            "closeOnExit": false,
            "acrylicOpacity": 0.5
